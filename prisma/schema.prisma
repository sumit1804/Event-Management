// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modellint Our Database

// Users
model User{
  Uid String @id @default(cuid())
  email String @unique
  name String 
  mobileNum String @unique
  password String
  myEvents Event[]
}

// Events
model Event{
  Eid Int @id @default(autoincrement())
  title String
  description String
  creator User @relation(fields: [userId], references: [Uid])
  userId String
  Resources EventResource[]
}

// Events Resources
model EventResource{
  Rid Int @id @default(autoincrement())
  resourceName String
  resourcePrice Int
  usedBy Event @relation(fields: [eventId],references: [Eid])
  eventId Int
}


